<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="apps.crystalbits.tcgtournament">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity android:name="apps.crystalbits.tcgtournament.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="apps.crystalbits.tcgtournament.newtournament.NewTournamentView"/>
        <activity android:name="apps.crystalbits.tcgtournament.addplayer.AddPlayerView"
            android:windowSoftInputMode="stateAlwaysVisible"/>
        <activity
            android:name="apps.crystalbits.tcgtournament.enrollplayer.EnrollPlayerView" />
        <activity
            android:name="apps.crystalbits.tcgtournament.playermanagement.PlayerManagementView"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:name="apps.crystalbits.tcgtournament.pairings.PairingsView"
            android:theme="@style/AppTheme.NoActionBar"/>

    </application>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

</manifest>